{
  "project": {
    "name": "Research Knowledge Base",
    "description": "Ultra-simplified research system with intelligent agents",
    "version": "2.0.0"
  },
  "agents": {
    "enabled": true,
    "directory": ".claude/agents",
    "research": {
      "enabled": true,
      "description": "Intelligent research with built-in quality validation",
      "tools": ["WebSearch", "WebFetch", "Read", "Write", "Grep"]
    },
    "synthesis": {
      "enabled": true,
      "description": "Information synthesis with automatic insight extraction",
      "tools": ["Read", "Write", "Edit"]
    },
    "knowledge": {
      "enabled": true,
      "description": "Intelligent knowledge management with automatic everything",
      "tools": ["Read", "Write", "Edit", "Grep", "WebSearch", "WebFetch"]
    }
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": {
          "prompts": ["/research", "/synthesize", "/know", "/explore"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/router.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "tools": {
      "WebSearch": "allow",
      "WebFetch": "allow",
      "Read": "allow",
      "Write": "allow",
      "Edit": "allow",
      "Grep": "allow"
    },
    "file_access": {
      "read": ["**/*"],
      "write": ["docs/**/*", "tests/**/*", ".claude/**/*"],
      "exclude": [".git/**/*", "node_modules/**/*"]
    }
  }
}